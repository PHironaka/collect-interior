<div id="section-cta">
  <div class="container">
    <h3> {{ section.settings.text-box }} </h3>
    <p> {{ section.settings.body }} </p>
    <img src="{{ section.settings.image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" />
    <a href="{{ section.settings.link }}" class="btn btn--cta">{{ section.settings.linktext }}</a>
  </div>
</div>


{% schema %}
   {
  "name": "Page Section",
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "body",
      "type": "textarea",
      "label": "body",
      "default": "body"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "image"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Click here"
    }
  ],
  "presets": [
    {
      "name": "Call to Action",
      "category": "CTA button"
    }
  ]
}
{% endschema %}
